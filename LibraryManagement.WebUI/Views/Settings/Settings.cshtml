<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SeninKütüphanen</title>
    <link rel="stylesheet" href="/css/Settings.css"> 
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel = "icon" href = "/img/LibraryIcon.jpeg" type = "jpeg">
</head>

<body>
    @{
        string userName = ViewData["UserName"].ToString();
        string userProfilePicture = ViewData["UserProfilePicture"].ToString();
    }
    <nav class="bg-gray-900 text-white px-6 py-3 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <img src="/img/logo.png" class="w-12 h-12 rounded-full">
                <span class="font-semibold text-lg">SeninKütüphanen</span>
            </div>


            <!-- Profile & Notification -->
            <div class="flex items-center space-x-4">
                <ul class="hidden md:flex space-x-6 text-gray-300">
                    <li><a href="/EditLibrary/EditLibrary" class="hover:text-white">Kitaplık</a></li>
                    <li><a href="/Settings/Settings" class="hover:text-white">Ayarlar</a></li>
                </ul>
                <span class="hidden md:inline text-gray-400 hover:text-white cursor-pointer">🔔</span>
                <a href="/UserProfile/ProfileIndex"><img src="@((userProfilePicture != null) ? userProfilePicture : "~/img/profilepictureSmall.jpeg")" class="w-12 h-12 rounded-full"></a>
            </div>
        </div>
    </nav>

   <div class="page-container">
    <div class="settings-container">
        <h1 class="settings">Ayarlar</h1>
        <div class="userprofile-container">
            <h2 style="text-decoration: underline; color:#490000;">PROFİL</h2>
                    <h3>Yeni Kullanıcı Adı: <input id="TbxNewUserName" type="text">
                        <button id="changeUserName" type="button" class="change-button">Değiştir</button></h3>
                    <h3>Bulunulan Yer (Şehir/Ülke): <input id="TbxSetNewCity" type="text">|<input id="TbxSetNewCountry" type="text">
                    <button id="changeLocation" type="button" class="change-button">Değiştir</button>
                </h3>
            <form action="SetNewUserProfilePicture" method="post" enctype="multipart/form-data" style="display:inline-block;">
                    <h3 style="display:inline-block;">
                        Profil Resmini Değiştir: <input type="file" id="imageInput" name="imageFile" accept="image/*">
                        <button type="submit" class="change-button">Değiştir</button>
                    </h3>
            </form>
            <div style="display:inline-block;">
                    <button id="removeProfilePicButton" type="button" class="change-button">Kaldır</button>
            </div>
        </div>
      
                <div class="password-container">
                    <h2 style="text-decoration: underline; color:#490000;">ŞİFRE</h2>
                    <h3>Mevcut Şifre: <input id="TbxCurrentPassword" style="margin-left: 39px;" type=text></h3>
                    <h3>Yeni Şifre:<input id="TbxNewPassword" style="margin-left: 70px;" type="text"></h3>
                    <h3>Yeni Şifre Tekrar:<input id="TbxNewPasswordAgain" style="margin-left: 10px;" type="text"></h3>
                <button id="changePassword" type="button" class="change-button" style="margin-left:161.5px;">Değiştir</button>
                </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/Settings.js"></script>
 </div>     
</body>
</html>
